<% content_for :header do -%>
	Groups
<% end -%>

 <% content_for :sidebar do -%>
	<ul>
		<li><%= link_to "All Group Members", all_group_admin_groups_path %></li>
		<li><%= link_to "Admin Group Members", admin_group_admin_groups_url %></li>
		<li><%= link_to "BusinessAdmin Group Members", bdteam_group_admin_groups_url %></li>
		<li><%= link_to "Manager Group Members", manager_group_admin_groups_url %></li>
		<li><%= link_to "Developer Group Members", developer_group_admin_groups_url %></li>
	</ul>
<% end -%>

<table class="index">
  <tr>
	<th>Group</th>
	<th>No Of Members</th>
	<th>No Of Active Members </th>
        <th>No of suspended members</th>
  </tr>

<% @group.each do |a| %>
  <tr>
  <td><%=h a.name  %> </td>
  <td><%=h User.count(:conditions=>["role_id=?",a.id])  %> </td>
  <td><%=h User.count(:conditions=>["role_id=? and state='active'",a.id]) %> </td>
  <td><%=h User.count(:conditions=>["role_id=? and state='suspended'",a.id]) %> </td>
  </tr>
  <% end %>
</table>